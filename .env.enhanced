# Enhanced MCP LLM Assistant Configuration
# Complete configuration options for maximum customization

# ============================================================
# REQUIRED: API KEYS & AUTHENTICATION
# ============================================================
GOOGLE_API_KEY="your_gemini_api_key_here"  # pragma: allowlist secret
NOTION_TOKEN="your_notion_integration_token_here"  # pragma: allowlist secret

# ============================================================
# APPLICATION SETTINGS
# ============================================================
# Application display name
APP_NAME="MCP AI Assistant"
APP_VERSION="2.0.0"

# Server configuration
HOST="127.0.0.1"
PORT=8000
FRONTEND_PORT=8501

# Environment (development/production/testing)
ENVIRONMENT="development"

# ============================================================
# LLM CONFIGURATION
# ============================================================
# Primary model - best balance of performance and limits
GEMINI_MODEL_PRIMARY="gemini-2.5-flash"

# Fallback models (tried in order when rate limits hit)
GEMINI_MODEL_FALLBACK_1="gemini-2.5-flash-lite"
GEMINI_MODEL_FALLBACK_2="gemini-2.0-flash"
GEMINI_MODEL_FALLBACK_3="gemini-1.5-flash"

# Model parameters
GEMINI_TEMPERATURE=0.7
GEMINI_TOP_P=0.95
GEMINI_TOP_K=40
GEMINI_MAX_OUTPUT_TOKENS=2048

# Safety settings (BLOCK_NONE, BLOCK_ONLY_HIGH, BLOCK_MEDIUM_AND_ABOVE, BLOCK_LOW_AND_ABOVE)
GEMINI_SAFETY_HARASSMENT="BLOCK_ONLY_HIGH"
GEMINI_SAFETY_HATE="BLOCK_ONLY_HIGH"
GEMINI_SAFETY_SEXUAL="BLOCK_ONLY_HIGH"
GEMINI_SAFETY_DANGEROUS="BLOCK_ONLY_HIGH"

# ============================================================
# DOCKER & MCP SETTINGS
# ============================================================
# Docker container name for MCP
MCP_CONTAINER_NAME="mcp-gateway"

# Docker command timeout (seconds)
DOCKER_COMMAND_TIMEOUT=30
DOCKER_HEALTH_CHECK_TIMEOUT=5

# ============================================================
# NOTION INTEGRATION SETTINGS
# ============================================================
# Notion API version
NOTION_API_VERSION="2022-06-28"

# Notion request timeout (seconds)
NOTION_REQUEST_TIMEOUT=30

# ============================================================
# CHAT & UI SETTINGS
# ============================================================
# Maximum conversation history length (for context window management)
MAX_CONVERSATION_HISTORY=20

# Chat request timeout (seconds)
CHAT_REQUEST_TIMEOUT=60

# Enable/disable features
ENABLE_DOCKER_TOOLS=true
ENABLE_NOTION_INTEGRATION=true
ENABLE_CODE_EXECUTION=false

# UI Theme
UI_THEME="dark"  # dark, light, auto
UI_PRIMARY_COLOR="#4F46E5"  # Indigo
UI_BACKGROUND_COLOR="#0E1117"
UI_SECONDARY_BACKGROUND_COLOR="#262730"
UI_TEXT_COLOR="#FAFAFA"

# ============================================================
# LOGGING CONFIGURATION
# ============================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"

# Log file paths (relative to project root)
LOG_DIR="logs"
APP_LOG_FILE="logs/app.log"
BACKEND_LOG_FILE="logs/backend.log"
FRONTEND_LOG_FILE="logs/frontend.log"
LLM_LOG_FILE="logs/llm_service.log"
DOCKER_LOG_FILE="logs/docker_service.log"

# Log rotation settings
LOG_MAX_BYTES=10485760  # 10 MB
LOG_BACKUP_COUNT=5

# Enable detailed logging for debugging
DEBUG_MODE=false
LOG_API_REQUESTS=true
LOG_DOCKER_COMMANDS=true
LOG_LLM_INTERACTIONS=true

# ============================================================
# RATE LIMITING & PERFORMANCE
# ============================================================
# API rate limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Response caching
ENABLE_RESPONSE_CACHE=false
CACHE_TTL_SECONDS=300

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10

# ============================================================
# SECURITY SETTINGS
# ============================================================
# CORS settings (comma-separated origins)
CORS_ORIGINS="http://localhost:8501,http://127.0.0.1:8501"

# API authentication (optional)
ENABLE_API_AUTH=false
API_KEY=""

# Session settings
SESSION_SECRET_KEY="your-secret-key-change-in-production"  # pragma: allowlist secret
SESSION_TIMEOUT_MINUTES=60

# ============================================================
# ADVANCED FEATURES
# ============================================================
# Agentic loop settings
MAX_TOOL_ITERATIONS=5
ENABLE_PARALLEL_TOOL_CALLS=false

# Context window management
AUTO_SUMMARIZE_HISTORY=false
CONTEXT_COMPRESSION_THRESHOLD=15000  # tokens

# Analytics & monitoring
ENABLE_ANALYTICS=false
ANALYTICS_ENDPOINT=""

# ============================================================
# EXPERIMENTAL FEATURES
# ============================================================
# Enable experimental features (use with caution)
ENABLE_STREAMING_RESPONSES=false
ENABLE_VOICE_INPUT=false
ENABLE_IMAGE_ANALYSIS=false

# Multi-modal capabilities
ENABLE_FILE_UPLOADS=false
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES="txt,md,json,yaml,py,js,ts"

# ============================================================
# DEVELOPMENT & TESTING
# ============================================================
# Development mode settings
DEV_AUTO_RELOAD=true
DEV_SHOW_ERRORS=true

# Testing
TEST_MODE=false
MOCK_DOCKER_RESPONSES=false
MOCK_LLM_RESPONSES=false
